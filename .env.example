# API Server Configuration
PORT=5000

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# BSC Wallet Configuration
WALLET_PRIVATE_KEY=your_wallet_private_key_here
WALLET_ADDRESS=your_wallet_address_here

# BSC Node Configuration
BSC_NODE_URL=https://bsc-dataseed.binance.org/

# PancakeSwap Router Address
PANCAKESWAP_ROUTER_ADDRESS=0x10ED43C718714eb63d5aA57B78B54704E256024E

# Trading Configuration
AUTO_TRADING=false  # Set to true to enable actual trading
SIMULATION_MODE=true  # Set to false for real trading
TRADING_PAIR=WBTC/BUSD  # Trading pair on DEX
AMOUNT_TO_TRADE=0.01    # Amount of BTC to trade

# Indicators Configuration
RSI_PERIODS=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
EMA_PERIODS=20

# Profit/Loss Configuration
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=3.0
PRICE_DIFFERENCE_THRESHOLD=0.5  # % difference between Binance and DEX

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Trading parameters
TRADE_SIZE_PERCENT=5
MAX_SLIPPAGE_PERCENT=0.2
PROFIT_TARGET_PERCENT=0.6
TRAILING_STOP_PERCENT=0.5

# Token addresses
WBTC_ADDRESS=0x7130d2A12B9BCbFAe4f2634d864A1Ee1Ce3Ead9c
WBNB_ADDRESS=0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c
BUSD_ADDRESS=0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56

# Operation modes
NODE_ENV=development

# Dynamic Position Sizing Configuration
DYNAMIC_POSITION_SIZING=true
MIN_POSITION_SIZE_PERCENT=2.5
MAX_POSITION_SIZE_PERCENT=10
VOLATILITY_SCALING_FACTOR=1.0
CONFIDENCE_SCALING_FACTOR=1.0

# Multi-timeframe Analysis Configuration
TIMEFRAMES=5m,15m,1h
PRIMARY_TIMEFRAME=5m

# Performance Tracking Configuration
TRACK_PERFORMANCE=true
PERFORMANCE_LOG_FILE=performance_log.json